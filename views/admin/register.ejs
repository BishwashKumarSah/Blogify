<div class="login_form">
  <h3 class="admin_header">SignUp</h3>
  <form action="/admin/signup" method="post">
    <% if (errors.username) { %>
     <p class="error email__error"><%= errors.username %></p>
    <% } else {%>
      <p class="error password__error"><%= errors.password %></p>
      <% } %>
    <label for="username"><b>Username:</b></label>
    <input
      type="text"
      name="username"
      id="username"
      placeholder="Enter Your Name..."
      required
    />

    <label for="password"><b>Password:</b></label>
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Enter Your Password..."
      required
    />
    <button type="submit" class="btn">SignUp</button>
  </form>
</div>
